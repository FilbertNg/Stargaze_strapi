{
  "kind": "collectionType",
  "collectionName": "publics",
  "info": {
    "singularName": "public",
    "pluralName": "publics",
    "displayName": "Publication"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "journal_name": {
      "type": "string",
      "required": true
    },
    "cover_picture": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "vol": {
      "type": "integer"
    },
    "issue": {
      "type": "integer"
    },
    "page_start": {
      "type": "integer"
    },
    "page_end": {
      "type": "integer"
    },
    "author": {
      "type": "component",
      "component": "list-of-details.person",
      "repeatable": true,
      "required": true
    },
    "citation": {
      "type": "text"
    },
    "impact_factor": {
      "type": "decimal",
      "conditions": {
        "visible": {
          "!=": [
            {
              "var": "publication_type"
            },
            "granted patent"
          ]
        }
      },
      "required": false
    },
    "indexing_classification": {
      "type": "enumeration",
      "conditions": {
        "visible": {
          "!=": [
            {
              "var": "publication_type"
            },
            "granted patent"
          ]
        }
      },
      "enum": [
        "WWoS Q1",
        "WWoS Q2",
        "WWoS Q3",
        "WWoS Q4",
        "Conference Paper",
        "Scopus-indexed",
        "Non-indexed"
      ]
    },
    "publication_type": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "technical",
        "review",
        "granted patent",
        "filed patent"
      ]
    },
    "doi_link": {
      "type": "string",
      "required": true
    },
    "executive_summary": {
      "type": "richtext"
    },
    "funding_section": {
      "type": "richtext"
    },
    "grants_and_projects": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::grants-n-project.grants-n-project",
      "mappedBy": "publications"
    }
  }
}
