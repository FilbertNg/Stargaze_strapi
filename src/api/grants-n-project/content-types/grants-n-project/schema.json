{
  "kind": "collectionType",
  "collectionName": "grants_n_projects",
  "info": {
    "singularName": "grants-n-project",
    "pluralName": "grants-n-projects",
    "displayName": "Grants and Projects"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "project_title": {
      "type": "string",
      "required": true
    },
    "funder": {
      "type": "string"
    },
    "pi_name": {
      "type": "string",
      "required": false
    },
    "grant_scheme_name": {
      "type": "string",
      "required": false
    },
    "grant_code": {
      "type": "string",
      "required": false
    },
    "type_of_grants": {
      "type": "enumeration",
      "required": false,
      "enum": [
        "national grants",
        "industry grants",
        "internal grants"
      ]
    },
    "total_funding": {
      "type": "biginteger",
      "required": false,
      "default": "0",
      "min": "0"
    },
    "start_date": {
      "type": "date",
      "required": true
    },
    "end_date": {
      "type": "date",
      "required": false
    },
    "grant_status": {
      "type": "enumeration",
      "enum": [
        "In Progress",
        "Completed",
        "Delayed"
      ]
    },
    "citation": {
      "type": "text",
      "required": false
    },
    "collaborators": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::collaborator.collaborator",
      "mappedBy": "grants_and_projects"
    },
    "team_members": {
      "type": "component",
      "component": "list-of-details.person",
      "repeatable": true,
      "required": false
    },
    "project_output": {
      "type": "component",
      "component": "list-of-details.project-output",
      "repeatable": false,
      "required": false
    },
    "graphical_abstract": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "publications": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::public.public",
      "inversedBy": "grants_and_projects"
    }
  }
}
